{
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.0.6/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.12.5/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.12/jsx-runtime.ts"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    // "lume": "deno eval --reload \"import 'lume/cli.ts'\" --",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "lup": "deno task lume upgrade",
    "lupd": "deno task lume upgrade --dev",
    "update-deps": "deno run -A --quiet 'https://deno.land/x/nudd@v0.2.10/cli.ts' update plugins.ts deno.json",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "plugins": [
      "https://deno.land/x/lume@v3.0.6/lint.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ]
}
